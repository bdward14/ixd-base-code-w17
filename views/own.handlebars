<!doctype html>
<html>
  <head>
    <title>Your Request</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href = "/css/own.css" rel = "stylesheet">

    <!-- Bootstraps-->
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

  </head>

  <body>

    <nav class="navbar navbar-default navbar-fixed-top"  role="navigation">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <!-- Back button -->
        <button type="button" class="btn" id="back">
            <a href = '/index'>
          <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
          </a>
        </button>

        <!-- Logo button -->
        <a href = '/index'><img alt="Brand" src="/images/logo-here.png" id="logo"></a>
      </div><!-- /.navbar-header -->
    </div><!-- /.container-fluid -->
    </nav>

    <div class="container">
        <!-- Main part of page -->
        <div class = "main-container" align="center" id="5">
       
          <!-- Favor Requested -->
          {{#each ownRequest}}
          <div class="panel panel-primary" id="5">
            <!-- Main details of favour -->
              <div class="panel-heading favours" id="top">
              <!-- Image -->
              <img src = "../images/{{image}}" class = "image">
              <!-- Subject -->
              <h1 class="panel-title" id="sub">{{subject}}</h1>
              <h2 class="panel-title" id="name">{{name}}</h2>
            </div>

            <!-- Description of favour -->
            <div class="panel-body" id="bottom">
              <h4 id="time"><strong>By</strong> {{time}}</h4>
              <h4 id="loc"><strong>At</strong> {{location}}</h4>
              <div class="description" id="describe">
                <p>{{description}}</p>
              </div>
            </div>
          </div>
        {{/each}}
      </div>

    </div>

    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="/js/bootstrap.min.js"></script>

  </body>
