<!doctype html>
<html>

<!-- Title of tab / app -->
<head>
	<title>Select Favour</title>

	<!-- Bootstrap to stylesheet -->
	<link href = "/css/select.css" rel = "stylesheet">

	<!-- Viewtype that prevents from zooming out when changing to phone -->
	<meta name = "viewport" content = "width=device-width, initial-scale=1.0">

	<!-- Bootstraps -->
	<link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>

<!-- Actual app -->
<body>

    <nav class="navbar navbar-default navbar-fixed-top"  role="navigation">
    <div class="container-fluid">

    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
    	<!-- Back button -->
	    <button type="button" class="btn" id="back">
	      	<a href = '/index'>
	    	<span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
	    	</a>
	    </button>

	    <!-- Logo button -->
    	<a href = '/index'><img alt="Brand" src="/images/logo-here.png" id="logo"></a>
 
    </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
    </nav>

    <!-- Main part of page -->
 	<div class = "main-container" align="center">
 
		<!-- Favor Requested -->
		<div class="panel panel-primary">
			<!-- Main details of favour -->
	    	<div class="panel-heading favours" id="top">
				<!-- Image -->
				<img src = "../images/{{image}}" class = "image">
				<!-- Name -->
				<h1 class="panel-title" id="name">{{name}}</h1>
			</div>

			<!-- Description of favour -->
			<div class="panel-body" id="bottom">
				<h3 id="sub">{{subject}}</h3>
				<div class="well">
					<h4 id="loc">Location: {{location}}</h4>
					<h4 id="time">Time: {{time}}</h4>
				</div>
				<div class="description">
					<p>{{description}}</p>
				</div>
			</div>
		</div>

	</div>

	<!-- Accept Button -->
	<nav class="navbar navbar-default navbar-fixed-bottom">
 	    <div class="container">
	 	    <ul class="nav navbar-nav">
				<li>
				{{#if inProgress}}
					<div class="navbar-brand" id="title">You are currently doing a favour. You can only accept to do one at a time</div>
				{{else}}
					<a href="/accept/{{id}}">
					<button class="btn bnt-primary" role="button" aria-haspopup="true" aria-expanded="false" id="buttonAccept"><span>accept favour</span></button>
					</a>
				{{/if}}
				</li>
		    </ul>
	  </div>
	</nav>

	<!-- Bootstrap -->
	<script src="https://code.jquery.com/jquery.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/click.js"></script>

</body>
