<!doctype html>
<html>

<!-- Title of tab / app -->
<head>
	<title>Select Favour</title>

	<!-- Bootstrap to stylesheet -->
	<link href = "/css/select.css" rel = "stylesheet">

	<!-- Viewtype that prevents from zooming out when changing to phone -->
	<meta name = "viewport" content = "width=device-width, initial-scale=1.0">

	<!-- Bootstraps -->
	<link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>

<!-- Actual app -->
<body>
	<nav class="navbar navbar-default navbar-fixed-top"  role="navigation">
   <div class="container-fluid">
   <!-- Brand and toggle get grouped for better mobile display -->
   <div class="navbar-header">
   <button type="button" class="btn">
   	<a href = '..'>
   	<span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
   </a>
   </button>
   <img alt="Brand" src="/images/#">

   </div><!-- /.navbar-collapse -->
   </div><!-- /.container-fluid -->
   </nav>

	<div align = "center">
	<div class = "container">

		<!-- Favor Requested -->
		<div class="panel panel-primary">
		  <div class="panel-heading favours" id="{{id}}">
				<!-- Image -->
				<img src = "../images/{{image}}" class = "image">
				<!-- Subject -->
				<h1 class="panel-title"> {{subject}} </h1>
				<h2 class="panel-title">{{name}}</h2>
			</div>
			<div class="panel-body">
				<h4>Time: {{time}}</h4>
				<h4>Location: {{location}}</h4>
					<p>{{description}}</p>
				</div>
		</div>

		<!-- Accept Button -->
		<nav class="navbar navbar-default navbar-fixed-bottom">
  <div class="container">
    <ul class="nav navbar-nav">
		<li><a href = "/html/accept.html" class="navbar-btn navbar-left" role="button" aria-haspopup="true" aria-expanded="false"> <span> ACCEPT FAVOUR</span> </a>
		<div class = "current"> 
		</div>
		</a>

	</li>
    </ul>

    
  </div>
</nav>

	</div>
	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
    <script src="/js/bootstrap.min.js"></script>

</body>

<!-- End of file -->
</html>
