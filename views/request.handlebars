<body>
	
	<nav class="navbar navbar-default navbar-fixed-top"  role="navigation">
		<div class="container-fluid">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="btn" id="back">
					<a href = '/index?showModal=fals'>
						<span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
					</a>
				</button>

				<!-- Title of page -->
				<a class="navbar-brand" href="">Making A Request</a>

				<!-- Logo photo -->
				<a href = "/index?showModal=fals"><img alt="Brand" src="/images/logo-here.png" id="logo"></a>

			</div><!-- /.navbar-collapse -->
		</div><!-- /.container-fluid -->
	</nav>

	<div align = "center">
		<div class = "maincontainer">

			<!-- Favor to Request -->
			<!--open form-->

			<form id="requestFavour" role="form" method="POST" action="/add">
				<div class="form-group">
					<label for="subject">Favour Subject:</label>
					<input type="text" class="form-control" id="subject" placeholder="" name="subject">
				</div>


				<div class="form-group">
					<label for="datetime-local-input">Date and time</label>
					    <input class="form-control" type="datetime-local" value="yyy-mm-ddThh:mm:ss" id="datetime-local-input">
				</div>


				<div class="form-group">
					<label for="location">Favour Location:</label>
					<input type="text" class="form-control" id="location" placeholder="location for favour to happen" name="location">
				</div>

				<div class="form-group">
					<label for="description">Favour Description:</label>
					<input type="text" class="form-control" id="description" placeholder="More detailed description" name="description">
				</div>

				<!-- Accept Button -->
				<nav class="navbar navbar-default navbar-fixed-bottom">
					<div class="container">
						<ul class="nav navbar-nav">
							<li>
								
								<input type="submit" id="submitBtn" class="btn navbar-btn navbar-left btn-primary btn-lg" value="Confirm Request"></input>

								<a href="index?showModal=2" class="navbar-btn navbar-right" role="button" aria-haspopup="true" aria-expanded="false" id="cancelRequest button"><button type="button" class="btn btn-danger btn-lg" id="button">
									Cancel Request
								</button></a>

							</li>
						</ul>
					</div>
				</nav>
			</form>
		</div>
	</div>



			<script src="/js/jquery-1.11.0.js"></script>
			<script src="https://code.jquery.com/jquery.js"></script>
			<script src="/js/bootstrap.min.js"></script>
			<script src="/js/click.js"></script>

		</body>
		</html>
