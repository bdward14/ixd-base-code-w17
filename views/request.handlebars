			</div><!-- /.navbar-collapse -->
		</div><!-- /.container-fluid -->
	</nav>

	<div align = "center">
		<div class = "maincontainer">

			<!-- Favor to Request -->
			<!--open form-->
			<form id="requestFavour" role="form" method="POST" action="/add">
				<div class="form-group" id="subjectForm">
					<label for="subject">Favour Subject:</label>
					<input type="text" class="form-control" id="subjectControl" placeholder="" name="subject">
				</div>

				<div class="form-group" id="dateTimeForm">
				     <label for="datetime-local-input">Date and time:</label>
				         <div class="input-group date" id="date-picker">
				           	<span class="input-group-addon" id="calendar"><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span></span>
				           		<input class="form-control" type="date" id="dateControl">
				           		<span class="input-group-addon" id="clock"><span class="glyphicon glyphicon-time" aria-hidden="true"></span></span>
				           		<input class="form-control" type="time" id="timeControl">
				         </div>
				 </div>

				<div class="form-group" id="locationForm">
					<label for="location">Favour Location:</label>
					<input type="text" class="form-control" id="locationControl" placeholder="Location for favour to happen" name="location">
				</div>

				<div class="form-group" id="descriptionForm">
					<label for="description">Favour Description:</label>
					<textarea class="form-control" rows="5" id="descriptionControl" placeholder="More detailed description"></textarea>

				</div>

				<!-- Accept Button -->
				<nav class="navbar navbar-default navbar-fixed-bottom">
					<div class="container">
						<ul class="nav navbar-nav">
							<li>
								
								<input type="submit" id="submitBtn" class="btn navbar-btn navbar-left btn-primary btn-lg" value="Confirm Request"></input>

								<a href="index?showModal=2" class="navbar-btn navbar-right" role="button" aria-haspopup="true" aria-expanded="false" id="cancelRequest button"><button type="button" class="btn btn-danger btn-lg" id="button">Cancel Request</button></a>

							</li>
						</ul>
					</div>
				</nav>
			</form>
		</div>
	</div>



